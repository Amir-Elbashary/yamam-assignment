<div class="antialiased bg-slate-200">
  <br>
  <div class="max-w-lg mx-auto my-10 bg-white p-8 rounded-xl shadow shadow-slate-300">
    <h1 class="text-4xl font-medium">Sign Up</h1>
    <p class="text-slate-500">Welcome to Yamam ðŸ‘‹</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex flex-col space-y-5">
        <div class="field">
          <%= f.label :email, class: 'font-medium text-slate-700 pb-2' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full py-3 border border-slate-200 rounded-lg px-3 focus:outline-none focus:border-slate-500 hover:shadow', placeholder: 'Enter your email...' %>
        </div>

        <div class="field">
          <%= f.label :first_name, class: 'font-medium text-slate-700 pb-2' %><br />
          <%= f.text_field :first_name, class: 'w-full py-3 border border-slate-200 rounded-lg px-3 focus:outline-none focus:border-slate-500 hover:shadow', placeholder: 'Enter your first name...' %>
        </div>

        <div class="field">
          <%= f.label :last_name, class: 'font-medium text-slate-700 pb-2' %><br />
          <%= f.text_field :last_name, class: 'w-full py-3 border border-slate-200 rounded-lg px-3 focus:outline-none focus:border-slate-500 hover:shadow', placeholder: 'Enter your last name...' %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'font-medium text-slate-700 pb-2' %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: 'w-full py-3 border border-slate-200 rounded-lg px-3 focus:outline-none focus:border-slate-500 hover:shadow', autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'font-medium text-slate-700 pb-2' %><br />
          <%= f.password_field :password_confirmation, class: 'w-full py-3 border border-slate-200 rounded-lg px-3 focus:outline-none focus:border-slate-500 hover:shadow', autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign Up", class: "w-full py-3 font-medium text-white bg-indigo-600 hover:bg-indigo-500 rounded-lg border-indigo-500 hover:shadow inline-flex space-x-2 items-center justify-center" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
          <% end %>

          <br/> <br/>
          <p class="text-center">Already registered?
            <a href="/users/sign_in" class="text-indigo-600 font-medium inline-flex space-x-1 items-center"><span>Login now </span><span><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg></span></a>
          </p>
        </div>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
  <br>
</div>


