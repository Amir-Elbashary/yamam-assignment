<%= turbo_frame_tag task do %>
  <div class="task">
    <%= link_to task.title,
                task_path(task),
                data: { turbo_frame: "_top" }%>
    <div class="task__actions">
      <%= link_to 'Delete', task_path(task),
                  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <%= link_to "Edit",
                  edit_task_path(task),
                  class: "btn btn--light" %>
    </div>
  </div>
  <br/>
<% end %>
